{
  "name": "action-auto-merge",
  "version": "1.0.0",
  "packageManager": "pnpm@10.29.3",
  "private": true,
  "description": "Automatically enables GitHub auto-merge for safe Dependabot updates.",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "rslib build",
    "test": "tsx --test test/**/*.test.ts",
    "test-types": "tsc --noEmit",
    "lint": "biome check .",
    "lint-ci": "biome ci .",
    "lint-fix": "biome check --write --unsafe .",
    "format": "biome format --write ."
  },
  "dependencies": {
    "@actions/core": "^3.0.0",
    "@actions/github": "^9.0.0",
    "semver": "^7.7.4"
  },
  "devDependencies": {
    "@arthurfiorette/biomejs-config": "^2.0.1",
    "@biomejs/biome": "^2.3.15",
    "@rslib/core": "^0.19.6",
    "@types/node": "^25.2.3",
    "@types/semver": "^7.7.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
